{{!
    @template enrol_ukfilmnet/studentspage

    Template which defines a Students page.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * headings Object containing key/value pairs.
    * rows Array of Objects containing key/value pairs.

    Example content (json):
    {
        "headings":
            {
                "title0":"Email",
                "title1":"First Name",
                "title2":"Family Name",
                "extra_header_cols":"Loom007-0<\/th>Loom007-1<\/th>"}
        "rows":
            [
                {
                    "userid":"",
                    "student_email":"slim@school.edu<\/span>",
                    "student_firstname":"dsl-slim<\/span>",
                    "student_familyname":"chance<\/span>",
                    "extra_row_cols":"1<\/span><\/td>1<\/span><\/td>"
                }
            ]
    }
}}
<form action="../ukfilmnet/students.php" method="post" onkeydown="return event.key != 'Enter';">

<div class='ukfn_enrol_main'>
    <div id='' class='ukfn_progress_list_area ukfn_background_color'>
        <h3 class='ukfn_enrol_page_title'>{{#str}}plugin_heading, enrol_ukfilmnet{{/str}}</h3>
        <div class='ukfn_progress_titlebox'>
            
            <h5 class='ukfn_progress_title'>{{#str}}progressbox_title, enrol_ukfilmnet{{/str}}</h5>
        </div>
        <div class='ukfn_progress_items'>
            <p class='item_complete'>{{#str}}applicant_subheading, enrol_ukfilmnet{{/str}}</p>
            <p class='item_complete'>{{#str}}emailverification_subheading, enrol_ukfilmnet{{/str}}</p>
            <p class='item_complete'>{{#str}}courses_subheading, enrol_ukfilmnet{{/str}}</p>
            <p class='item_complete'>{{#str}}institution_subheading, enrol_ukfilmnet{{/str}}</p>
            <p class='item_complete'>{{#str}}safeguardingreview_subheading, enrol_ukfilmnet{{/str}}</p>
            <p class='item_current'>{{#str}}students_subheading, enrol_ukfilmnet{{/str}}</p>
        </div>
    </div>
    <div class='ukfn_content_area ukfn_background_color'>
        <h4 class='ukfn_applicant_subheading one_panel'>{{#str}}students_subheading, enrol_ukfilmnet{{/str}}</h4>
        <div class='ukfn_applicant_content'>
            <p>{{#str}}students_instructions, enrol_ukfilmnet{{/str}}</p>
            <!--<div id='ukfn_student_enrol_form'>{{{studentsinput}}}</div>-->
            {{{message}}}
            <table class="generaltable sortable-table">
                <thead>
                    <tr>
                        {{#headings}}
                            <th class="header ukfn_text_center" scope="col">{{title0}}</th>
                            <th class="header ukfn_text_center" scope="col">{{title1}}</th>
                            <th class="header ukfn_text_center" scope="col">{{title2}}</th>
                            {{{extra_header_cols}}}
                        {{/headings}}                
                    </tr>
                </thead>
                <tbody>
                    {{#rows}}
                        <tr>
                            <td class="cell ukfn_text_center ukfn_enrol_col" scope="col">
                                {{{student_email}}}
                            </td>
                            <td class="cell ukfn_text_center ukfn_enrol_col" scope="col">
                                {{{student_firstname}}}
                            </td>
                            <td class="cell ukfn_text_center ukfn_enrol_col" scope="col">
                                {{{student_familyname}}}
                            </td>
                            {{{extra_row_cols}}}
                    </tr>
                    {{/rows}}
                </tbody>
            </table>
            {{{message}}}
            <div class="ukfn_max_width">
                <div class="ukfn_applicant_subheading one_panel">
                    <span>
                        <input class="btn btn-primary" type="submit" name="submit_type" value="Submit">
                    </span>
                    <span>
                        <input class="btn btn-primary" type="submit" name="submit_type" value="Exit">
                    </span>
                </div>
            </div>
            <p></p>
            <br/>
        </div>
    </div>
</div>
</form>
